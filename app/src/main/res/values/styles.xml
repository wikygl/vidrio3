<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color</item>
        <item name="colorPrimaryDark">@color/color</item>
        <item name="colorAccent">#0099FF</item>
    </style>
    <style name="nuevosplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/nuevo</item>
    </style>
    <!-- Estilo para dialogo pantalla completa -->
    <style name="FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/blanco</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="DisenoNova.ControlButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:tint">@color/blanco</item>
        <item name="tint">@color/blanco</item>
    </style>

</resources>
