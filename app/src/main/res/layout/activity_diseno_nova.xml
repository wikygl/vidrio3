<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contenedorPrincipal"
    android:layout_height="match_parent"
    android:background="@color/sombra"
    android:layout_width="match_parent">

    <crystal.crystal.Diseno.nova.VistaDiseno
        android:id="@+id/vistaDiseno"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="Lienzo de diseno"
        app:layout_constraintBottom_toTopOf="@+id/botonEditar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Panel flotante de controles -->
    <FrameLayout
        android:id="@+id/overlayControles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/vistaDiseno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/columnaBotones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            android:padding="8dp">

            <!-- Panel de controles (aparece arriba) -->

            <!-- Fila inferior de botones control -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/filaControles"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:id="@+id/panelProductos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_control_panel"
                    android:elevation="8dp"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp"
                    android:clipToPadding="false"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@+id/btnProductos"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="NotSibling">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="6dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardFranja"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="3"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="9dp"
                            app:cardUseCompatPadding="true">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="8dp">

                                <View
                                    android:id="@+id/recuadroFranja"
                                    android:layout_width="match_parent"
                                    android:layout_height="32dp"
                                    android:background="@drawable/corner" />

                                <TextView
                                    android:id="@+id/tvFranja"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Franja"
                                    android:textStyle="bold" />
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardEliminarModulo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="9dp"
                            app:cardUseCompatPadding="true">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="8dp">

                                <View
                                    android:id="@+id/recuadroEliminarModulo"
                                    android:layout_width="match_parent"
                                    android:layout_height="32dp"
                                    android:background="@drawable/corner" />

                                <TextView
                                    android:id="@+id/tvEliminarModulo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="X"
                                    android:textStyle="bold" />
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_gravity="center_horizontal"
                        android:columnCount="3"
                        android:rowCount="3">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/fijo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="9dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView16"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Fijo" />

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_margin="4dp"
                                    android:contentDescription="Producto 1"
                                    app:srcCompat="@drawable/ic_vitrofijo" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/corrediza"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="9dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView17"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Corrediza" />

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_margin="4dp"
                                    android:contentDescription="Producto 2"
                                    app:srcCompat="@drawable/ic_fichad2" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/parante"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="9dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView25"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="poste" />

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_margin="4dp"
                                    android:contentDescription="Producto 3"
                                    app:srcCompat="@drawable/ic_fichad3" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </GridLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/panelMedidasRapidas"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_control_panel"
                    android:elevation="8dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@+id/btnMedidasRapidas"
                    app:layout_constraintStart_toStartOf="parent">

                    <EditText
                        android:id="@+id/etAnchoRapido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ancho (cm)"
                        android:inputType="numberDecimal"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/etAltoRapido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Alto (cm)"
                        android:inputType="numberDecimal"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/etPuenteRapido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Alto del puente (cm)"
                        android:inputType="numberDecimal"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnAplicarMedidasRapidas"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="6dp"
                        android:backgroundTint="@color/azul"
                        android:text="Aplicar"
                        android:textAllCaps="false"
                        android:textColor="@color/blanco"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/panelCotasPlanos"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_control_panel"
                    android:elevation="8dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@+id/btnCotasPlanos"
                    app:layout_constraintStart_toStartOf="@+id/btnCotasPlanos">

                    <TextView
                        android:id="@+id/tvTituloCotas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Cotas"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/contenedorCotas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/panelControles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_control_panel"
                    android:elevation="6dp"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@+id/btnMostrarOcultar"
                    app:layout_constraintStart_toStartOf="parent">

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:columnCount="3"
                        android:rowCount="3">

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/btnAgregarFranja"
                            style="@style/DisenoNova.ControlButton"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:background="@drawable/bg_control_blue"
                            android:contentDescription="Agregar franja"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_franja_add" />

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/btnQuitarFranja"
                            style="@style/DisenoNova.ControlButton"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:background="@drawable/bg_control_blue"
                            android:contentDescription="Quitar franja"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_franja_remove" />

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/btnEspaciadorPanel"
                            style="@style/DisenoNova.ControlButton"
                            android:layout_row="2"
                            android:layout_column="0"
                            android:background="@android:color/transparent"
                            android:clickable="false"
                            android:focusable="false"
                            android:visibility="invisible" />

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/btnQuitarModulo"
                            style="@style/DisenoNova.ControlButton"
                            android:layout_row="2"
                            android:layout_column="1"
                            android:background="@drawable/bg_control_blue"
                            android:contentDescription="Quitar modulo"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_mod_remove" />

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/btnAgregarModulo"
                            style="@style/DisenoNova.ControlButton"
                            android:layout_row="2"
                            android:layout_column="2"
                            android:background="@drawable/bg_control_blue"
                            android:contentDescription="Agregar modulo"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_mod_add" />
                    </GridLayout>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btnMostrarOcultar"
                    style="@style/DisenoNova.ControlButton"
                    android:background="@drawable/bg_control_blue"
                    android:contentDescription="Mostrar u ocultar controles"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/ic_toggle_controls" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btnMedidasRapidas"
                    style="@style/DisenoNova.ControlButton"
                    android:background="@drawable/bg_control_blue"
                    android:contentDescription="Medidas rapidas"
                    app:layout_constraintBottom_toBottomOf="@+id/btnMostrarOcultar"
                    app:layout_constraintStart_toEndOf="@+id/btnMostrarOcultar"
                    app:layout_constraintTop_toTopOf="@+id/btnMostrarOcultar"
                    app:srcCompat="@drawable/ic_measures" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btnCotasPlanos"
                    style="@style/DisenoNova.ControlButton"
                    android:background="@drawable/bg_control_blue"
                    android:contentDescription="Cotas de planos"
                    app:layout_constraintBottom_toBottomOf="@+id/btnMostrarOcultar"
                    app:layout_constraintStart_toEndOf="@+id/btnMedidasRapidas"
                    app:layout_constraintTop_toTopOf="@+id/btnMostrarOcultar"
                    app:srcCompat="@drawable/cota" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btnTipoEnsamble"
                    style="@style/DisenoNova.ControlButton"
                    android:background="@drawable/bg_control_blue"
                    android:contentDescription="Alternar tipo de ensamble"
                    app:layout_constraintBottom_toBottomOf="@+id/btnMostrarOcultar"
                    app:layout_constraintStart_toEndOf="@+id/btnCotasPlanos"
                    app:layout_constraintTop_toTopOf="@+id/btnMostrarOcultar"
                    app:srcCompat="@drawable/ic_toggle_mode" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btnEnviarCalculadora"
                    style="@style/DisenoNova.ControlButton"
                    android:background="@drawable/bg_control_blue"
                    android:contentDescription="Enviar a calculadora"
                    android:padding="9dp"
                    app:layout_constraintBottom_toBottomOf="@+id/btnMostrarOcultar"
                    app:layout_constraintStart_toEndOf="@+id/btnTipoEnsamble"
                    app:layout_constraintTop_toTopOf="@+id/btnMostrarOcultar"
                    app:srcCompat="@drawable/calcu" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btnLimpiarDiseno"
                    style="@style/DisenoNova.ControlButton"
                    android:background="@drawable/bg_control_blue"
                    android:contentDescription="Limpiar diseno"
                    app:layout_constraintBottom_toBottomOf="@+id/btnMostrarOcultar"
                    app:layout_constraintStart_toEndOf="@+id/btnEnviarCalculadora"
                    app:layout_constraintTop_toTopOf="@+id/btnMostrarOcultar"
                    app:srcCompat="@drawable/escoba" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btnProductos"
                    style="@style/DisenoNova.ControlButton"
                    android:background="@drawable/bg_control_blue"
                    android:contentDescription="Mostrar productos"
                    app:layout_constraintBottom_toBottomOf="@+id/btnMostrarOcultar"
                    app:layout_constraintStart_toEndOf="@+id/btnLimpiarDiseno"
                    app:layout_constraintTop_toTopOf="@+id/btnMostrarOcultar"
                    app:srcCompat="@drawable/escoger" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

    <Button
        android:id="@+id/botonEditar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:backgroundTint="@color/azul"
        android:text="Editar"
        android:textAllCaps="false"
        android:textColor="@color/blanco"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
