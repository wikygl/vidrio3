<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".optimizadores.Corte">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <LinearLayout
                android:id="@+id/lyCabeza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color"
                android:orientation="vertical"
                android:paddingStart="4.5dp"
                android:paddingTop="4.5dp"
                android:paddingEnd="4.5dp"
                android:paddingBottom="4.5dp"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.9"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:orientation="horizontal"
                        tools:ignore="DisableBaselineAlignment,
                        NestedWeights">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="-6dp"
                                android:layout_weight="0.54"
                                android:gravity="center"
                                android:text="@string/crystal"
                                android:textAlignment="viewStart"
                                android:textColor="@color/blanco"
                                android:textSize="24sp"
                                tools:ignore="RtlCompat" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvIdVende"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_gravity="end"
                                    android:layout_weight="1"
                                    android:text="@string/daniel"
                                    android:textColor="@color/blanco"
                                    tools:ignore="TextContrastCheck" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        tools:ignore="UselessLeaf" />

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1.8dp"
                        android:layout_weight="1"
                        android:background="@color/color"
                        android:contentDescription="@string/todo"
                        app:srcCompat="@drawable/ic_mensajes"
                        tools:ignore="TouchTargetSizeCheck,
                    DuplicateSpeakableTextCheck" />

                    <ImageButton
                        android:id="@+id/taller_cal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/color"
                        android:contentDescription="@string/todo"
                        app:srcCompat="@drawable/ic_taller2"
                        tools:ignore="TouchTargetSizeCheck,
                    TouchTargetSizeCheck" />

                    <ImageButton
                        android:id="@+id/micro"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1.8dp"
                        android:layout_weight="1"
                        android:background="@color/color"
                        android:contentDescription="@string/todo"
                        app:srcCompat="@drawable/ic_clcv"
                        tools:ignore="TouchTargetSizeCheck" />

                    <ImageButton
                        android:id="@+id/imageButton9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1.8dp"
                        android:layout_weight="1"
                        android:background="@color/color"
                        android:contentDescription="@string/todo"
                        app:srcCompat="@drawable/ic_usuario4"
                        tools:ignore="TouchTargetSizeCheck,
                    TouchTargetSizeCheck" />

                    <ImageButton
                        android:id="@+id/btScan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1.8dp"
                        android:layout_weight="1"
                        android:background="@color/color"
                        android:contentDescription="@string/todo"
                        app:srcCompat="@drawable/ic_hogar"
                        tools:ignore="TouchTargetSizeCheck" />

                    <ImageButton
                        android:id="@+id/btn_catalogo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1.8dp"
                        android:layout_weight="1"
                        android:background="@color/color"
                        android:contentDescription="@string/todo"
                        app:srcCompat="@drawable/ic_catalogo"
                        tools:ignore="TouchTargetSizeCheck" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyCuerpo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/col1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="4.5dp"
                    android:layout_weight="1.27"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.27"
                        android:background="@drawable/corner"
                        android:orientation="vertical"
                        tools:ignore="NestedWeights,UselessParent">

                        <TextView
                            android:id="@+id/listado_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/corner2"
                            android:backgroundTint="@color/color"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:text="@string/listado_de_medidas"
                            android:textColor="@color/blanco"
                            tools:ignore="TouchTargetSizeCheck,
                            TextContrastCheck" />

                        <Spinner
                            android:id="@+id/spCortes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cornere"/>

                        <ListView
                            android:id="@+id/listCorte"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:ignore="TooManyViews" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/col2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4.5dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="9dp"
                    android:layout_weight="1"
                    android:background="@drawable/corner"
                    android:orientation="vertical"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:id="@+id/textV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/corner2"
                        android:backgroundTint="@color/color"
                        android:gravity="center"
                        android:text="Varillas,disco y retazos"
                        android:textColor="@color/blanco"
                        tools:ignore="TextContrastCheck" />


                    <LinearLayout
                        android:id="@+id/lyLits"
                        android:layout_width="match_parent"
                        android:layout_height="117dp"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <ListView
                            android:id="@+id/listaPerfil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/cornere"
                                android:layout_marginTop="-1dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/btAgregar"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    app:srcCompat="@drawable/agregar"
                                    tools:ignore="ContentDescription,ImageContrastCheck" />

                                <ImageView
                                    android:id="@+id/btEliminar"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    app:srcCompat="@drawable/eliminar"
                                    tools:ignore="ContentDescription" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginTop="-1dp"
                                android:layout_marginBottom="-1dp"
                                android:paddingStart="1dp"
                                android:background="@drawable/cornere"
                                tools:ignore="RtlSymmetry">

                                <TextView
                                    android:id="@+id/textView11"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:text="Grosor disco" />

                                <EditText
                                    android:id="@+id/etGrosor"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/cornere"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:hint="0.25"
                                    android:inputType="numberDecimal"
                                    tools:ignore="Autofill,LabelFor,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/cornere"
                                android:layout_marginBottom="-1dp"
                                android:paddingStart="1dp"
                                android:orientation="vertical"
                                tools:ignore="RtlSymmetry">

                                <ScrollView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        tools:ignore="TooDeepLayout">

                                    </LinearLayout>
                                </ScrollView>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cornere"
                        android:backgroundTint="@color/color"
                        android:gravity="center"
                        android:text="@string/medidas_y_cantidades"
                        android:textColor="@color/blanco"
                        tools:ignore="TextContrastCheck" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="117dp"
                        android:layout_marginBottom="3dp"
                        android:orientation="vertical"
                        tools:ignore="UselessParent">

                        <LinearLayout
                            android:id="@+id/med1_lay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView13"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:layout_weight="1"
                                android:background="@drawable/botoncircular"
                                android:paddingStart="6dp"
                                android:text="@string/medida"
                                tools:ignore="RtlSymmetry" />

                            <EditText
                                android:id="@+id/etMedida"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:autofillHints="@string/todo"
                                android:backgroundTint="@color/color"
                                android:ems="10"
                                android:inputType="numberDecimal"
                                android:textColorHint="@color/sombra2"
                                android:textColorLink="@color/color"
                                tools:ignore="LabelFor,TouchTargetSizeCheck,
                                TouchTargetSizeCheck,TouchTargetSizeCheck,
                                SpeakableTextPresentCheck" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/cant_lay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:layout_weight="1"
                                android:background="@drawable/botoncircular"
                                android:paddingStart="6dp"
                                android:text="@string/cantidad"
                                tools:ignore="RtlSymmetry" />

                            <EditText
                                android:id="@+id/etCant"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:autofillHints="@string/todo"
                                android:backgroundTint="@color/color"
                                android:ems="10"
                                android:inputType="number"
                                android:textColorHint="@color/sombra2"
                                tools:ignore="LabelFor,TouchTargetSizeCheck,
                                SpeakableTextPresentCheck,
                                SpeakableTextPresentCheck" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/precio_lay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:layout_weight="1"
                                android:background="@drawable/botoncircular"
                                android:paddingStart="6dp"
                                android:text="@string/referencia"
                                tools:ignore="RtlSymmetry,TooDeepLayout" />

                            <EditText
                                android:id="@+id/etRefe"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:autofillHints="@string/todo"
                                android:backgroundTint="@color/color"
                                android:ems="10"
                                android:inputType="textAutoCorrect"
                                tools:ignore="LabelFor,SpeakableTextPresentCheck,
                                TextFields,TouchTargetSizeCheck" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="97dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginEnd="9dp"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btAnadir"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:background="@drawable/botoncircular"
                            android:backgroundTint="@color/verde"
                            android:text="@string/a_adir"
                            android:textColor="@color/blanco"
                            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btLimpiar"
                                android:layout_width="match_parent"
                                android:layout_height="36dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="4.5dp"
                                android:layout_weight="1"
                                android:background="@drawable/botoncircular"
                                android:backgroundTint="@color/color"
                                android:foregroundGravity="center"
                                android:text="@string/limpiar"
                                android:textColor="@color/blanco"
                                tools:ignore="ButtonStyle,TouchTargetSizeCheck,
                                    TouchTargetSizeCheck,TouchTargetSizeCheck,
                                    TextContrastCheck" />

                            <Button
                                android:id="@+id/btOpti"
                                android:layout_width="match_parent"
                                android:layout_height="36dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="4.5dp"
                                android:layout_weight="1"
                                android:background="@drawable/botoncircular"
                                android:backgroundTint="@color/rojo"
                                android:text="@string/calcular"
                                android:textColor="@color/blanco"
                                tools:ignore="ButtonStyle,TextContrastCheck,
                                    TooManyViews,TouchTargetSizeCheck" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="9dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/tvResultado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                </LinearLayout>
            </ScrollView>


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>