<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- BotÃ³n para agregar fotos -->
    <Button
        android:id="@+id/btnAgregarFoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+ Agregar Imagen"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#4CAF50" />

    <!-- Botones de filtro -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btnMostrarTodas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Todas"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#2196F3"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnMostrarStorage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Storage"
            android:layout_marginHorizontal="4dp"
            android:backgroundTint="#FF9800"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnMostrarLocal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Local"
            android:layout_marginStart="4dp"
            android:backgroundTint="@color/violeta"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- RecyclerView para mostrar las fotos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerFotos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="4dp" />

</LinearLayout>