                            <EditText
                                android:id="@+id/med2_editxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:autofillHints="@string/todo"
                                android:backgroundTint="@color/color"
