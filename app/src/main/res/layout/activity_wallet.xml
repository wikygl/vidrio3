<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_wallet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    tools:context=".registro.WalletActivity">

    <!-- Barra superior -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_wallet"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:titleTextColor="@color/blanco"
        android:title="Mi Wallet"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Title" />

    <!-- Contenido principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="32dp">

            <!-- Tarjeta de saldo -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSaldo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/blanco"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tvSaldoTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saldo disponible"
                        android:textSize="16sp"
                        android:textColor="@color/negro" />

                    <TextView
                        android:id="@+id/tvSaldo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/ 0.00"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="@color/verde"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Estado de wallet y plan -->
            <TextView
                android:id="@+id/tvEstadoWallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado wallet: ACTIVA"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:textColor="@color/negro" />

            <!-- Estado del plan actual -->
            <TextView
                android:id="@+id/tvEstadoPlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plan: Cargando..."
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="12dp"
                android:background="@drawable/bg_rounded_blue"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

            <!-- Cron贸metro del plan -->
            <TextView
                android:id="@+id/tvCronometroPlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="憋 Calculando..."
                android:textSize="14sp"
                android:padding="8dp"
                android:textAlignment="center"
                android:layout_marginTop="4dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

            <!-- Bot贸n para ir a selecci贸n de planes -->
            <Button
                android:id="@+id/btnPlanes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Ver / cambiar plan"
                android:textAllCaps="false"
                android:backgroundTint="@color/fucsia"
                android:textColor="@color/blanco" />

            <!-- Acciones de seguridad: congelar / descongelar / cambiar PIN -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/btnCongelar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Congelar"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/fucsia"
                    android:textColor="@color/blanco" />

                <Button
                    android:id="@+id/btnDescongelar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Descongelar"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/verde"
                    android:textColor="@color/blanco" />
            </LinearLayout>

            <Button
                android:id="@+id/btnCambiarPin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Cambiar PIN de Wallet"
                android:textAllCaps="false"
                android:backgroundTint="@color/fucsia"
                android:textColor="@color/blanco" />

            <!-- Bot贸n para elegir comprobante (abre selector de imagen) -->
            <Button
                android:id="@+id/btnSeleccionarComprobante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Seleccionar comprobante"
                android:textAllCaps="false"
                android:backgroundTint="@color/fucsia"
                android:textColor="@color/blanco"
                android:drawableLeft="@drawable/ic_usuario4"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:onClick="onSeleccionarComprobanteClick" />


            <!-- Bot贸n de recarga manual -->
            <Button
                android:id="@+id/btnRecargar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text=" Reclamar Recarga"
                android:textAllCaps="false"
                android:backgroundTint="@color/verde"
                android:textColor="@color/blanco"
                android:drawableLeft="@drawable/ic_mic"
                android:drawablePadding="8dp"
                android:gravity="center_vertical" />

            <!-- Historial de recargas -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Historial de recargas"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:textColor="@color/negro" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRecargas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:listitem="@layout/item_recarga" />

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
