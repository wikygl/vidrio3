<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical">

    <!-- Número -->
    <TextView
        android:id="@+id/tvNumero"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:text="1"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/circle_number"
        android:layout_marginEnd="12dp" />

    <!-- Información del cliente -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNombreSeleccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Juan Pérez"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDocumentoSeleccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DNI: 12345678"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvEstadisticasSeleccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 compras • S/ 1,500"
            android:textSize="11sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />
    </LinearLayout>
</LinearLayout>