<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nombre del dispositivo -->
        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Samsung Galaxy Tab A8"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- Device ID -->
        <TextView
            android:id="@+id/tvDeviceId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID: abc12345..."
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />

        <!-- Android version -->
        <TextView
            android:id="@+id/tvAndroid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Android 13"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="2dp" />

        <!-- Fecha de autorizaciÃ³n -->
        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Autorizado: 24/12/2025 15:30"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="2dp" />

        <!-- Estado -->
        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ… Activo"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- BotÃ³n desautorizar -->
        <Button
            android:id="@+id/btnDesautorizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="ðŸš« Desautorizar"
            android:backgroundTint="#F44336"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    </LinearLayout>

</androidx.cardview.widget.CardView>