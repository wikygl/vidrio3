<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <crystal.crystal.optimizadores.ArcDrawingView
        android:id="@+id/arcDrawingView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FDFDFD"
        app:layout_constraintBottom_toTopOf="@+id/tvError"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#E53935"
        android:textSize="13sp"
        android:padding="4dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/containerInputs" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/containerInputs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etDesarrollo"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:hint="Desarrollo" android:inputType="numberDecimal" />
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etCuerda"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:hint="Cuerda" android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etFlecha"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:hint="Flecha" android:inputType="numberDecimal" />
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etLargo"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:hint="Largo" android:inputType="numberDecimal" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDibujar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#2E7D32"
            android:text="GENERAR ISOMÃ‰TRICO"
            android:textColor="#FFFFFF" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>