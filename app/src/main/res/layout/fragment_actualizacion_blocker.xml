<?xml version="1.0" encoding="utf-8"?>
<!--
   fragment_actualizacion_blocker.xml
   Layout que bloquea toda la app hasta sincronizar
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">

    <!-- Icono de advertencia -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="锔"
        android:textSize="64sp"
        android:layout_marginBottom="24dp" />

    <!-- T铆tulo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizaci贸n Requerida"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Mensaje -->
    <TextView
        android:id="@+id/tvMensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="El administrador actualiz贸 los datos de empresa.\n\nDebes sincronizar antes de continuar."
        android:textAlignment="center"
        android:textColor="#666666"
        android:textSize="16sp"
        android:layout_marginBottom="32dp" />

    <!-- ProgressBar (oculto inicialmente) -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="24dp" />

    <!-- Bot贸n Sincronizar -->
    <Button
        android:id="@+id/btnSincronizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" SINCRONIZAR"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp" />

    <!-- Nota sobre internet -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* Requiere conexi贸n a internet"
        android:textColor="#999999"
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_marginTop="16dp" />

</LinearLayout>