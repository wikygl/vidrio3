<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Indicador de stock (barra lateral) -->
        <View
            android:id="@+id/indicadorStock"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:background="@color/verde"/>

        <!-- Información del producto -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vidrio Templado 6mm"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEMPLADO"
                android:textSize="12sp"
                android:textColor="@color/color"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvDetalles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6mm • Incoloro"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- ⭐ PRECIO DE VENTA -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPrecioVenta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/ 85.50"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <!-- ⭐ MARGEN -->
                    <TextView
                        android:id="@+id/tvMargen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Margen: 31%"
                        android:textSize="11sp"
                        android:textColor="@color/verde"
                        android:layout_marginTop="2dp"
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/tvStock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stock: 25"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/verde"/>

                    <TextView
                        android:id="@+id/tvEstadoStock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STOCK BAJO"
                        android:textSize="10sp"
                        android:textColor="@android:color/holo_orange_dark"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnEditar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Editar"/>

            <ImageButton
                android:id="@+id/btnEliminar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginTop="4dp"
                android:contentDescription="Eliminar"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>