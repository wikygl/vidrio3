                android:text="ðŸ“· Vista previa de imagen"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp" />

            <ImageView
                android:id="@+id/ivVistaPrevia"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ic_placeholder_camara"
                android:scaleType="centerCrop"
                android:background="@drawable/borde_imagen"
                android:layout_marginBottom="12dp"
                android:contentDescription="Vista previa de imagen" />

            <!-- Botones de imagen -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnCamara"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="ðŸ“· Foto/GalerÃ­a"
