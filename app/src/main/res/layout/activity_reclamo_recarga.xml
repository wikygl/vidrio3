<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TÃ­tulo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reclamar Recarga"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Si tu recarga no fue procesada automÃ¡ticamente, puedes reclamarla aquÃ­."
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp" />

        <!-- Card del voucher -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:radius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Adjunta tu voucher"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnSeleccionarVoucher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Ž Seleccionar Voucher" />

                <TextView
                    android:id="@+id/tvVoucherStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Sin voucher"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/ivVoucherPreview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerInside" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card de datos -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:radius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Ingresa los datos"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <!-- Monto -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Monto (S/)"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/etMonto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ej: 10.50"
                    android:inputType="numberDecimal"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <!-- Tipo de pago -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo de pago"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/rgTipoPago"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/rbPlinYape"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Plin â†’ Yape"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/rbYapeYape"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Yape â†’ Yape" />

                    <RadioButton
                        android:id="@+id/rbYapePlin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Yape â†’ Plin" />

                </RadioGroup>

                <!-- ExplicaciÃ³n -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ExplicaciÃ³n del problema"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/etExplicacion"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:hint="Ej: Hice una recarga de S/ 10.50 desde Plin a mi cuenta Yape pero no llegÃ³..."
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:maxLines="6"
                    android:textSize="14sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- BotÃ³n enviar -->
        <Button
            android:id="@+id/btnEnviarReclamo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="ðŸ“¤ Enviar Reclamo"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="â„¹ï¸ Tu reclamo serÃ¡ revisado por un administrador en breve. Te notificaremos cuando sea procesado."
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center" />

    </LinearLayout>

</ScrollView>