<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalles del Producto"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Nombre -->
        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vidrio Templado 6mm Incoloro"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Categoría -->
        <TextView
            android:id="@+id/tvCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEMPLADO"
            android:textSize="14sp"
            android:textColor="@color/color"
            android:layout_marginBottom="16dp"/>

        <!-- Descripción (opcional) -->
        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción del producto..."
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"/>

        <!-- ⭐ PRECIOS: Compra, Venta y Margen -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio Compra"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"/>
                <TextView
                    android:id="@+id/tvPrecioCompra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/ 65.00"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio Venta"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"/>
                <TextView
                    android:id="@+id/tvPrecioVenta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/ 85.50"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/color"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unidad"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"/>
                <TextView
                    android:id="@+id/tvUnidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="m2"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- ⭐ MARGEN DE GANANCIA -->
        <TextView
            android:id="@+id/tvMargen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Margen: 31.5%"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/verde"
            android:layout_marginBottom="16dp"
            android:visibility="gone"/>

        <!-- Stock -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stock Actual"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"/>
                <TextView
                    android:id="@+id/tvStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stock Mínimo"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"/>
                <TextView
                    android:id="@+id/tvStockMinimo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Estado del stock -->
        <TextView
            android:id="@+id/tvEstadoStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✅ STOCK OK"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/verde"
            android:layout_marginBottom="16dp"/>

        <!-- Espesor (opcional) -->
        <LinearLayout
            android:id="@+id/layoutEspesor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Espesor"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"/>
            <TextView
                android:id="@+id/tvEspesor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6mm"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Tipo (opcional) -->
        <LinearLayout
            android:id="@+id/layoutTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"/>
            <TextView
                android:id="@+id/tvTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Incoloro"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- ⭐ VALORES DE INVENTARIO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valor en Inventario (Venta)"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"/>
            <TextView
                android:id="@+id/tvValorTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/ 2,137.50"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/color"/>

            <!-- ⭐ GANANCIA POTENCIAL -->
            <TextView
                android:id="@+id/tvGananciaPotencial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ganancia potencial: S/ 512.50"
                android:textSize="14sp"
                android:textColor="@color/verde"
                android:layout_marginTop="4dp"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Botón cerrar -->
        <Button
            android:id="@+id/btnCerrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar"/>
    </LinearLayout>
</ScrollView>